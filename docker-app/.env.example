# Face Detection Application Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_VERSION=1.0.0
NODE_ENV=production
LOG_LEVEL=info

# Port Configuration
HTTP_PORT=8080
HTTPS_PORT=8443
DEV_PORT=3000

# Performance Settings
ENABLE_METRICS=true
MAX_UPLOAD_SIZE=20M
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=4096

# Model Cache Settings
MODEL_CACHE_DIR=/usr/share/nginx/html/model-cache
MODEL_CACHE_MAX_SIZE=1G
MODEL_CACHE_TTL=7d

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ENABLE_RATE_LIMITING=false
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS Settings (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS="TLSv1.2 TLSv1.3"

# Docker Registry (for deployment)
DOCKER_REGISTRY=docker.io
DOCKER_USER=

# Monitoring and Logging
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true
LOG_FORMAT=json
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health

# Development Settings
CHOKIDAR_USEPOLLING=true
WEBPACK_DEV_SERVER_HOST=0.0.0.0

# Resource Limits
CONTAINER_CPU_LIMIT=2
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_RESERVATION=0.5
CONTAINER_MEMORY_RESERVATION=512M

# Feature Flags
ENABLE_LITE_MODE=true
ENABLE_PRO_MODE=true
DEFAULT_MODE=lite
ENABLE_DEBUG_MODE=false

# Face Detection Settings
DETECTION_CONFIDENCE_THRESHOLD=0.7
MAX_FACES_TO_DETECT=10
DETECTION_MODEL_URL=/models
ENABLE_FACE_LANDMARKS=true
ENABLE_FACE_EXPRESSIONS=true
ENABLE_AGE_GENDER=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITOR=true
FPS_UPDATE_INTERVAL=1000
PERFORMANCE_SAMPLE_SIZE=30