# Face Detection Application Environment Configuration

# Application Settings
APP_VERSION=1.0.0
NODE_ENV=production
LOG_LEVEL=info

# Port Configuration
HTTP_PORT=8080
HTTPS_PORT=8443
DEV_PORT=3000

# Performance Settings
ENABLE_METRICS=true
MAX_UPLOAD_SIZE=20M

# Model Cache Settings
MODEL_CACHE_DIR=/usr/share/nginx/html/model-cache

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Feature Flags
ENABLE_LITE_MODE=true
ENABLE_PRO_MODE=true
DEFAULT_MODE=lite

# Face Detection Settings
DETECTION_CONFIDENCE_THRESHOLD=0.7
MAX_FACES_TO_DETECT=10